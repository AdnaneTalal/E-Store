@model IEnumerable<E_Store.Models.Category>
<style>

    .stretched-link {
        text-decoration: none;
    }
</style>
<h2 class="text-capitalize text-lg-center fs-1">Categories</h2>

@if (User.IsInRole("ADMIN"))
{
    <p>
        @Html.ActionLink("Create New", "Create", new { }, htmlAttributes: new { @class = "fa fa-plus  btn btn-outline-success" })
    </p>
}

<div class="container ">
    <div class="row row-cols-3 justify-content-center align-items-center">
        @foreach (var item in Model)
        {

            <div class="col align-self-end text-center ">



                <div class="card bg-dark  ">
                    <div class="card-body">
                        <img class="bd-placeholder-img align-self-center rounded-circle" width="140" height="140" src="~/image/cat/@Html.DisplayFor(modelItem => item.Image)" preserveAspectRatio="xMidYMid slice" focusable="false" />



                        <h2> @Html.ActionLink(item.Name, "Index", "Products", new { category = item.Name }, htmlAttributes: new { @class = "stretched-link text-light" })</h2>
                        @*   <p>Some representative placeholder content for the three columns of text below the carousel. This is the first column.</p>*@


                    </div>

                </div>

                <div>

                    <p>
                        @if (User.IsInRole("ADMIN"))
                        {

                            @Html.ActionLink("Edit", "Edit", "Categories", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-warning fa fa-edit" })

                            @Html.ActionLink("Delete", "Delete", "Categories", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-danger fa fa-times-circle" })



                        }
                        @Html.ActionLink("Details", "Details", "Categories", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-info fa fa-info-circle" })
                    </p>
                </div>

            </div>

        }

    </div>

</div>


